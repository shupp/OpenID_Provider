<phpunit bootstrap="phpunit-bootstrap.php"  colors="true">
        <testsuite name="OpenID_Provider AllTests">
                <file>tests/OpenID/Provider/AllTests.php</file>
        </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">OpenID/Provider</directory>
            <file>OpenID/Provider.php</file>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="coverage" charset="UTF-8"
            yui="true" highlight="true" lowUpperBound="90" highLowerBound="100"/>
    </logging>
</phpunit>
